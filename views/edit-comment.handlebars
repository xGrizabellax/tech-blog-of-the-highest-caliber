<div class="text-center">
    <h2 class='ind-post-title'>{{post.name}}</h2>
    <div class='row current-post'>
        <div class='col-md-6'>
            <h6 class='current-post-body py-2'>{{post.body}}</h6>
            <p class='post-user'>Posted by: {{user.username}} on {{format_date date_created}}</p>
        </div>
    </div>

    <form class='form edit-comment' data-id='{{id}}'>
        <div class='form-group leave-comment'>
            <div class='row edit-text-comment'>
                <div class='col-md-6'>
                    <input class='form-input' type='text' id='edit-text' value="{{text}}"></input>
                </div>
            </div>
        </div>
        <div class='form-group'>
            <button type='submit' class="btn btn-primary">COMMENT</button>
        </div>
    </form>





<script src='/js/editComment.js'></script>