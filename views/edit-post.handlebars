<div class='row mt-4 justify-space-around new-post-card'>
    <div class='col-md-6'>
        <h1>Edit Your Post</h1>

        <form class='form edit-post' data-id='{{id}}'>
            <div class='form-group'>
                <label for='post-name'>Post-Title</label>
                <input class='form-input' type='text' value='{{name}}' id='name-edit'>
            </div>
            <div class='form-group'>
                <label for='post-body'>Description</label>
                <input class='form-input' type='text' value='{{body}}' id='body-edit'></input>
            </div>
            <div class='form-group'>
                <button type='submit' class='btn btn primary'>Submit Post</button>
            </div>
        </form>

    </div>
</div>


<script src='/js/editPost.js'></script>