<div class='row justify-space-around'>
    <div class='col mb-2 lg-6'>
        <h1>LOGIN</h1>

        <form class='form login-user'>
            <div class='form-group'>
                <label for='login-email'>Email</label>
                <input class='form-input' type='email' id='login-email'>
            </div>
            <div class='form-group'>
                <label for='login-password'>Password</label>
                <input class='form-input' type='password' id='login-password'>
            </div>
            <div class='form-group'>
                <button type="submit" class="btn btn primary">LOGIN USER</button>
            </div>
        </form>
    </div>
    <div class='col mb-2 lg-6'>
        <h1>CREATE NEW USER</h1>

        <form class='form create-user'>
            <div class='form-group'>
                <label for='create-username'>Username</label>
                <input class='form-input' type='text' id='create-username'>
            </div>
            <div class='form-group'>
                <label for='create-email'>Email</label>
                <input class='form-input' type='email' id='create-email'>
            </div>
            <div class='form-group'>
                <label for='create-password'>Password</label>
                <input class='form-input' type='password' id='create-password'>
            </div>
            <div class='form-group'>
                <label for='confirm-password'>Confirm Password</label>
                <input class='form-input' type='password' id='confirm-password'>
            </div>
            <div class='form-group'>
                <button type="submit" class="btn btn success">CREATE NEW USER</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>